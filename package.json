{
  "name": "game-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:api",
    "build": "npm run build:web && npm run build:api",
    "build:web": "npm --workspace web run build",
    "build:api": "npm --workspace api run build",
    "dev:web": "npm --workspace web run dev",
    "dev:api": "npm --workspace api run dev",
    "typecheck": "npm-run-all typecheck:web typecheck:api",
    "typecheck:web": "npm --workspace web run typecheck",
    "typecheck:api": "npm --workspace api run typecheck",
    "lint": "npm-run-all lint:web lint:api",
    "lint:web": "npm --workspace web run lint",
    "lint:api": "npm --workspace api run lint"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
